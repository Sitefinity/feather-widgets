@model ContentBlock.Mvc.Models.ContentBlockModel

@using Telerik.Sitefinity.Frontend.Mvc.Helpers

@{
    using (Html.InlineEditingRegion(Model.ProviderName, Model.ContentType, Model.SharedContentID))
    {
        @Html.TextField(Model, "Content")
        if (Model.EnableSocialSharing)
        {
            @Html.SocialShareOptions();
        }
    }
}