@using Telerik.Sitefinity.Frontend.Mvc.Helpers

<div class="dialog" modal dialog-controller="unshareDialogCtrl">
    <script type="text/ng-template" id="dialog-template" >
        <div class="modal-header">
            <button type="button" class="close" ng-click="Cancel()" aria-hidden="true">&times;</button>
            <h1 class="modal-title">@Html.SfRes("UnshareContentBlock")</h1>
        </div>
        <div class="modal-body">
            <div ng-show="ShowError" class="alert alert-danger">
                <a class="close" data-dismiss="alert">x</a>
                <strong>@Html.SfRes("Error")</strong> <span ng-bind="ErrorMessage"></span>
            </div>
            <div ng-show="ShowLoadingIndicator" class="s-loading m-bottom-sm"></div>
            <div class="form-group">
                @Html.Raw(Html.SfRes("AreYouSureYouWantToUnshareThisContent"))
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-warning" ng-click="UnshareContent()">@Html.SfRes("UnshareThisContent")</button>
            <button type="button" class="btn btn-link" ng-click="Cancel()">@Html.SfRes("Cancel")</button>
        </div>
    </script>
</div>

<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href='@Url.WidgetContent("Mvc/Scripts/Bootstrap/css/bootstrap.min.css")'>
<!-- Optional theme -->
<link rel="stylesheet" href='@Url.WidgetContent("Mvc/Styles/sitefinity-theme.min.css")'>

<script src='@Url.WidgetContent("Mvc/Scripts/Designer/modal-dialog.js")'></script>
<script src='@Url.WidgetContent("Mvc/Scripts/ContentBlock/share-dialog.js")'></script>
<script src='@Url.WidgetContent("Mvc/Scripts/ContentBlock/shared-content-services.js")'></script>

<script type="text/javascript">
    (function ($) {
        //This is the place where we bootstrap the data passed by the controller. We do that by creating a angular service which will return the data object
        angular.module('sharedContentServices').factory('descriptorService', function () {
            return {
                contentItemsServiceUrl: '@Url.Content("~/Sitefinity/Services/Content/ContentItemService.svc/")'
            };
        });

        angular.bootstrap($('.dialog'), ['shareDialog']);
    })(jQuery);
</script>