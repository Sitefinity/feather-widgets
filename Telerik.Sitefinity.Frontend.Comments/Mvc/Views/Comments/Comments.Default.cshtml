@model Telerik.Sitefinity.Frontend.Comments.Mvc.Models.CommentsModel


@using Telerik.Sitefinity.Frontend.Mvc.Helpers;
@using Telerik.Sitefinity.Modules.Pages;

@Html.Script(ScriptRef.JQuery, "top", false)


<div data-sf-role="comments-wrapper" class="@Model.CssClass">
    <input type="hidden" data-sf-role="comments-thread-key" value="@Model.ThreadKey" />
    <input type="hidden" data-sf-role="comments-page-size" value="@Model.CommentsConfig.CommentsPerPage" />
    <input type="hidden" data-sf-role="comments-header-text" value="@Html.Resource("CommentsPlural")" />
    <input type="hidden" data-sf-role="comments-read-full-comment" value="@Html.Resource("ReadFullComment")" />
    <input type="hidden" data-sf-role="comments-text-max-length" value="@Model.CommentTextMaxLength" />

    <div>
        <span data-sf-role="comments-header"></span>
        <button data-sf-role="comments-form-button">@Html.Resource("LeaveComment")</button>
        <button data-sf-role="comments-sort-new-button">@Html.Resource("NewestOnTop")</button>
        <button data-sf-role="comments-sort-old-button">@Html.Resource("OldestOnTop")</button>
    </div>

    <div data-sf-role="comments-new-holder">

        <div>
            <textarea rows="4" data-sf-role="comments-new-message" placeholder="@Html.Resource("LeaveComment")"></textarea>
        </div>

        <p data-sf-role="comments-new-logged-out-view">
            <input placeholder="@Html.Resource("YourName")" data-sf-role="comments-new-name" /> <br />
            <input type="email" placeholder="@Html.Resource("EmailOptional")" data-sf-role="comments-new-email" /> <br />
            <input type="url" placeholder="@Html.Resource("WebSiteOptional")" data-sf-role="comments-new-website" /> <br />
        </p>

        <div>
            <label>
                <input type="checkbox" data-sf-role="comments-new-subscribe" />
                <span>@Html.Resource("SubscribeToNewComments")</span>
            </label>
        </div>

        <div>
            @*Temporary styling*@
            <button class="realBtn" data-sf-role="comments-new-submit-button">@Html.Resource("Submit")</button>
        </div>

    </div>
    
    <div data-sf-role="comments-holder"></div>
    <button data-sf-role="comments-load-more-button">@Html.Resource("LoadMoreComments")</button>
    
    <script type="text/html-template" data-sf-role="single-comment-template">
        <div>
            <p>
                <a href="#"><span data-sf-role="comment-name"></span></a> | 
                <span data-sf-role="comment-date"></span>
            </p>
            <p>
                <span data-sf-role="comment-message"></span>
            </p>
        </div>
        <br />
    </script>
</div>

@Html.Script(Url.WidgetContent("Mvc/Scripts/CommentsMVC/comments.js"), "bottom", false)

@*Temporary styling*@
<style scoped>
button:not(.realBtn) {
    background:none!important;
    border:none; 
    padding:0!important;
    font: inherit;
    color: #105CB6;
    cursor: pointer;
}
</style>
