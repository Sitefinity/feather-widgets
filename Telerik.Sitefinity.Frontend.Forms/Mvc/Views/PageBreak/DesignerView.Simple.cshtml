@using Telerik.Sitefinity.Frontend.Forms.Mvc.Helpers;
@using Telerik.Sitefinity.Frontend.Mvc.Helpers;
@using Telerik.Sitefinity.Mvc;

<div class="form-group">
    <label for="nextStep">
        @Html.Resource("NextStepLabelText")
    </label>
    <div class="row">
        <div class="col-xs-6">
            <input id="nextStep" type="text" ng-model="properties.NextStepText.PropertyValue" class="form-control" />
        </div>
    </div>
</div>

<div class="form-group">
    <div class="checkbox">
        <label for="allowGoBack">
            <input id="allowGoBack" type="checkbox" ng-model="properties.AllowGoBack.PropertyValue" ng-true-value="'True'" ng-false-value="'False'"/>
            @Html.Resource("AllowGoBackText")
        </label>
    </div>
</div>

<div class="form-group" ng-show="properties.AllowGoBack.PropertyValue === 'True'">
    <label for="prevStep">
        @Html.Resource("PreviousStepLabelText")
    </label>
    <div class="row">
        <div class="col-xs-6">
            <input id="prevStep" type="text" ng-model="properties.PreviousStepText.PropertyValue" class="form-control" />
        </div>
    </div>
</div>

<expander expander-title='@Html.Resource("MoreOptions")'>
    <div class="form-group">
        <label for="textFieldTemplateName">@Html.Resource("Template")</label>

        <div class="row">
            <div class="col-xs-6">
                <select id="textFieldTemplateName" ng-model="properties.ReadTemplateName.PropertyValue" class="form-control">
                    @foreach (var viewName in Html.GetViewNames(((Telerik.Sitefinity.Mvc.Proxy.MvcProxyBase)Model).GetController(), @"^Read\.(?<viewName>[\w\s]*)$"))
                    {
                        <option value="@viewName"> @viewName.SplitCamelCase()</option>
                    }
                </select>
            </div>
        </div>
    </div>

    <style-dropdown selected-class="properties.Model.CssClass.PropertyValue" view-name="properties.ReadTemplateName.PropertyValue"></style-dropdown>

    <div class="form-group">
        <label for="cssClass">@Html.Resource("CssClasses")</label>
        <input type="text" id="cssClass" ng-model="properties.CssClass.PropertyValue" class="form-control" />
    </div>
</expander>
