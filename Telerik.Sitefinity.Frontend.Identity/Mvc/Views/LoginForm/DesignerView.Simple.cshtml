@using Telerik.Sitefinity.Frontend.Mvc.Helpers;

<form>
    <div class="form-group">
        <label>@Html.Resource("LandingPageAfterLoginInfo")</label>      
        <sf-list-selector
                class="label-content"
                sf-page-selector
                sf-selected-item-id="properties.LoginRedirectPageId.PropertyValue"></sf-list-selector>
    </div>

    <div class="form-group">
        <label>@Html.Resource("RegistrationPage")</label>
        <p>@Html.Resource("RegistrationPageInfo")</p>       
        <sf-list-selector
                class="label-content"
                sf-page-selector
                sf-selected-item-id="properties.RegistrationPageId.PropertyValue"></sf-list-selector>
    </div>

    <div class="form-group">
        <input type="checkbox" ng-model="properties.AllowResetPassword.PropertyValue" />
        <label>@Html.Resource("AllowResetPassword")</label>
    </div>

    <div class="form-group">
        <label for="templateName">@Html.Resource("LoginFormTemplate")</label>
        <div class="row">
            <div class="col-xs-6">
                <select id="templateName" ng-model="properties.LoginFormTemplate.PropertyValue" class="form-control">
                     @foreach (var viewName in Html.GetViewNames("LoginForm", @"LoginForm\.(?<viewName>\w*)$"))
                    {
                        <option value="@viewName">@viewName</option>
                    }
                </select>
            </div>
        </div>
    </div>

    <div class="form-group" ng-show="properties.AllowResetPassword.PropertyValue == true">
        <label for="templateName">@Html.Resource("ForgotPasswordTemplate")</label>
        <div class="row">
            <div class="col-xs-6">
                <select id="templateName" ng-model="properties.ForgotPasswordTemplate.PropertyValue" class="form-control">
                     @foreach (var viewName in Html.GetViewNames("LoginForm", @"ForgotPassword\.(?<viewName>\w*)$"))
                    {
                        <option value="@viewName">@viewName</option>
                    }
                </select>
            </div>
        </div>
    </div>

    <div class="form-group" ng-show="properties.AllowResetPassword.PropertyValue == true">
        <label for="templateName">@Html.Resource("ResetPasswordTemplate")</label>
        <div class="row">
            <div class="col-xs-6">
                <select id="templateName" ng-model="properties.ResetPasswordTemplate.PropertyValue" class="form-control">
                     @foreach (var viewName in Html.GetViewNames("LoginForm", @"ResetPassword\.(?<viewName>\w*)$"))
                    {
                        <option value="@viewName">@viewName</option>
                    }
                </select>
            </div>
        </div>
    </div>

    <expander expander-title='@Html.Resource("MoreOptions")'>
        <style-dropdown selected-class="properties.CssClass.PropertyValue" view-name="properties.TemplateName.PropertyValue"></style-dropdown>

        <div class="form-group">
            <label for="loginStatusCssClass">@Html.Resource("CssClasses")</label>
            <input type="text" id="loginStatusCssClass" ng-model="properties.CssClass.PropertyValue" class="form-control" />
        </div>
    </expander>
</form>