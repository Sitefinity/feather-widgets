@model Telerik.Sitefinity.Frontend.Identity.Mvc.Models.Profile.ProfileEditViewModel

@using Telerik.Sitefinity.Frontend.Mvc.Helpers;
@using Telerik.Sitefinity.UI.MVC;
@using Telerik.Sitefinity.Utilities;

<div class="@Model.CssClass">
    @if (Model.ShowProfileChangedMsg)
    {
        <div>@Html.Resource("ChangesAreSaved")</div>
    }

    @using (Html.BeginFormSitefinity("Index", "EditProfileForm", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.ValidationSummary(true);
        
            <div>
            @Html.HiddenFor(u => u.DeletePicture, new { @class = "edit-profile-delete-picture" })
            @Html.HiddenFor(u => u.DefaultAvatarUrl, new { @class = "edit-profile-default-avatar-url" })

            <img class="edit-profile-user-image" src="@Model.AvatarImageUrl" alt="@Model.UserName" width="100" height="100"/>
            <a href="#" class="edit-profile-delete-picture-button">x</a>
            <input type="file" class="edit-profile-upload-picture-button" accept="image/*" name="UploadedImage" value="@Html.Resource("EditProfileUploadImage")" />
        </div>
                
        <label>@Html.Resource("EditProfileFirstName")</label>
        <div class="editor-field">
            @Html.EditorFor(u => u.Profile["FirstName"])
            @Html.ValidationMessageFor(u => u.Profile["FirstName"])
        </div>
        
        <label>@Html.Resource("EditProfileLastName")</label>
        <div class="editor-field">
            @Html.EditorFor(u => u.Profile["LastName"]) 
            @Html.ValidationMessageFor(u => u.Profile["LastName"])
        </div>
       
        <label>@Html.Resource("EditProfileAbout")</label>
        <div class="editor-field">
            @Html.EditorFor(u => u.Profile["About"])
            @Html.ValidationMessageFor(u => u.Profile["About"])
        </div>
        
        <a href="#" class="edit-profile-change-password-button">@Html.Resource("EditProfileChangePasswordButton")</a>
        <div class="edit-profile-change-password-holder">
            <h4>@Html.Resource("EditProfileEditChangePasswordHeader")</h4>

            <label>@Html.Resource("EditProfileOldPassword")</label>
            <div class="editor-field"
                >@Html.PasswordFor(u => u.OldPassword)
                @Html.ValidationMessageFor(u => u.OldPassword)
            </div>

            <label>@Html.Resource("EditProfileNewPassword")</label>
            <div class="editor-field">
                @Html.PasswordFor(u => u.NewPassword)
                @Html.ValidationMessageFor(u => u.NewPassword)
            </div>

            <label>@Html.Resource("EditProfileRepeatPassword")</label>
            <div class="editor-field">
                @Html.PasswordFor(u => u.RepeatPassword)
                @Html.ValidationMessageFor(u => u.RepeatPassword)
            </div>
        </div>
        
        <div>
            <input class="profile-submit" type="submit" value='@Html.Resource("EditProfileSave")' />
            @Html.ActionLink(Html.Resource("EditProfileCancel"), "Index")
        </div>
    }
</div>

<script>
    (function ($) {
        $(function () {
            var changePasswordHolder = $('.edit-profile-change-password-holder').hide();
            var editProfileUserImage = $('.edit-profile-user-image');

            $('.edit-profile-change-password-button').on('click', function (e) {
                e.preventDefault();

                changePasswordHolder.toggle('slow');
            });

            $('.edit-profile-delete-picture-button').on('click', function (e) {
                e.preventDefault();

                editProfileUserImage.attr('src', $('.edit-profile-default-avatar-url').val()).hide();
                $('.edit-profile-delete-picture').val(true);
            });

            $('.edit-profile-upload-picture-button').on('change', function (e) {
                if (e.target.files && e.target.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function (readerLoadedEvent) {
                        editProfileUserImage.attr('src', readerLoadedEvent.target.result);
                    };
                    reader.readAsDataURL(e.target.files[0]);
                }
            });

            $('.profile-submit').click(function () {
                var form = document.forms["aspnetForm"];
                if (form) {
                    form.enctype = "multipart/form-data";
                }
            });
        });
    }(jQuery));
</script>
